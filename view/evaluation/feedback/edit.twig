{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-edit-feedback")) %}

<h1>{{ translate("txt-edit-feedback") }}</h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{% set feedback = form.get('evaluation_entity_feedback') %}

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-project") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ projectLink(version.project,'view-admin') }}</p>
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-version") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ versionLink(version,'general-admin') }} ({{ versionService.parseStatus(version) }})</p>
    </div>
</div>

{{ lbs5formelement(feedback.get('status')) }}
{{ lbs5formelement(feedback.get('mandatoryImprovements')) }}
{{ lbs5formelement(feedback.get('recommendedImprovements')) }}
{{ lbs5formelement(feedback.get('reviewFeedback')) }}
{{ lbs5formelement(feedback.get('evaluationFeedback')) }}
{{ lbs5formelement(feedback.get('evaluationConclusion')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ lbs5formelement(form.get('csrf')) }}
        {{ lbs5formelement(form.get('submit')) }}
        {{ lbs5formelement(form.get('delete')) }}
        {{ lbs5formelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}