{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-evaluation")) %}
{% do headTitle().append(translate("txt-evaluation-report-criterion-category-%s")|format(category)) %}

<h1>{{ category }}</h1>

<dl class="dl-horizontal">
    <dt>{{ translate("txt-category-id") }}</dt>
    <dd>{{ category.id }}</dd>
    <dt>{{ translate("txt-category") }}</dt>
    <dd>{{ category.category }}</dd>
    <dt>{{ translate("txt-sequence") }}</dt>
    <dd>{{ category.sequence }}</dd>
    <dt>{{ translate("txt-types") }}</dt>
    {% for type in category.types %}
        <dd>{{ reportCriterionTypeLink(type,'view','name') }}</dd>
    {% else %}
        <dd>{{ translate("txt-none") }}</dd>
    {% endfor %}
</dl>

{{ reportCriterionCategoryLink(category,'edit','button') }}