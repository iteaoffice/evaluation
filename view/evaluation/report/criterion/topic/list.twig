{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-evaluation")) %}
{% do headTitle().append(translate("txt-evaluation-report-criterion-topic-list")) %}

{% do form.prepare() %}
{{ form().openTag(form)|raw }}
{% set filter = form.get('filter') %}

<div class="row">
    <div class="col-md-12">
        <h1>{{ translate("txt-evaluation-report-criterion-topic-list") }} {{ report2CriterionTopicLink(null,'new','button') }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p class="lead">{{ translate("txt-evaluation-report-criterion-topic-list-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <div class="input-group-append input-group-btn">
                        {{ formelement(form.get('submit')) }}
                    </div>
                </div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-sm">
                <thead>
                <tr>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/evaluation/report2/criterion/topic/list', 'criteria': 'id', 'text': translate('txt-id')} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/evaluation/report2/criterion/topic/list', 'criteria': 'topic', 'text': translate('txt-topic')} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/evaluation/report2/criterion/topic/list', 'criteria': 'sequence', 'text': translate('txt-sequence')} %}</th>
                    <th>{{ translate("txt-report-versions") }}</th>
                    <th>{{ translate("txt-criteria") }}</th>
                </tr>
                </thead>
                <tbody>
                {% for topic in paginator.getCurrentItems() %}
                    <tr>
                        <td>
                            {{ topic.id }}
                            {{ report2CriterionTopicLink(topic,'edit','icon') }}
                        </td>
                        <td>{{ report2CriterionTopicLink(topic,'view','name') }}</td>
                        <td>{{ topic.sequence }}</td>
                        <td>{{ topic.reportVersions.count() }}</td>
                        <td>{{ topic.versionTopics.count() }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'application/partial/pagination-control' %}
        {% else %}
            {{ ztbalert().info(translate("txt-no-evaluation-report-criterion-topics-could-be-found"))|raw }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}

