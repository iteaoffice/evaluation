{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-evaluation")) %}
{% do headTitle().append(translate("txt-evaluation-report-criterion-topic-%s")|format(topic)) %}

<h1>{{ topic }}</h1>

<dl class="dl-horizontal">
    <dt>{{ translate("txt-id") }}</dt>
    <dd>{{ topic.id }}</dd>
    <dt>{{ translate("txt-topic") }}</dt>
    <dd>{{ topic.topic }}</dd>
    <dt>{{ translate("txt-active-report-versions") }}</dt>
    {% for reportVersion in topic.reportVersions|filter(reportVersion => not reportVersion.archived) -%}
        <dd>{{ reportVersionLink(reportVersion, 'view') }}</dd>
    {% else %}
        <dd>{{ translate("txt-none") }}</dd>
    {% endfor %}
</dl>

{{ reportCriterionTopicLink(topic,'edit','button') }}

