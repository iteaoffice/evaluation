<h1>{{ translate("txt-evaluation-report-criterion-topic-%s")|format(topic) }}</h1>

<dl class="dl-horizontal">
    <dt>{{ translate("txt-id") }}</dt>
    <dd>{{ topic.id }}</dd>
    <dt>{{ translate("txt-topic") }}</dt>
    <dd>{{ topic.topic }}</dd>
    <dt>{{ translate("txt-active-report-versions") }}</dt>
    {% for reportVersion in topic.reportVersions if not reportVersion.archived %}
        <dd>{{ report2VersionLink(reportVersion, 'view') }}</dd>
    {% endfor %}
</dl>

