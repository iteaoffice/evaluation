{% do form.prepare() %}
{{ form().openTag(form)|raw }}
{% set topic = form.get('evaluation_entity_report_criterion_topic') %}

{{ lbs5formelement(form.get('csrf')) }}
{{ lbs5formelement(topic.get('topic')) }}
{{ lbs5formelement(topic.get('sequence')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ formelement(form.get('submit')) }}
        {{ formelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ formelement(form.get('delete')) }}
        {% endif %}
    </div>
</div>
{{ form().closeTag()|raw }}
