{% do form.prepare() %}

{{ form().openTag(form)|raw }}
{% set category = form.get('evaluation_entity_report_criterion_category') %}

{{ lbs5formelement(form.get('csrf')) }}
{{ lbs5formelement(category.get('id')) }}
{{ lbs5formelement(category.get('category')) }}
{{ lbs5formelement(category.get('sequence')) }}

