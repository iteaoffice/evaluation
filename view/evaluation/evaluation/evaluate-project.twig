{% do headTitle().append(translate("txt-project-evaluation")) %}

<h1>{{ translate("txt-evaluation-of-type-%s-for-project-%s-in-%s")|format(evaluation.type, evaluation.project, evaluation.country) }}</h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}
{% set evaluation = form.get('evaluation_entity_evaluation') %}

{{ lbs5formelement(evaluation.get('status')) }}
{{ lbs5formelement(evaluation.get('eligible')) }}
{{ lbs5formelement(evaluation.get('description')) }}
{{ formelement(form.get('csrf')) }}

<div class="row mb-3">
    <div class="offset-md-3 col-sm-9">
        {{ lbs5formelement(form.get('submit')) }}
        {{ lbs5formelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}